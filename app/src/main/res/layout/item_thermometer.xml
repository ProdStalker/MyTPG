<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRelLay"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/nowIV"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/none_description"
        android:src="@drawable/ic_now_dark" />

    <TextView
        android:id="@+id/nextMinutesTV"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="40dp"
        android:layout_toRightOf="@+id/nextMinutesTV"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:id="@+id/arianeLinLay">

        <View
            android:layout_width="5dp"
            android:background="@drawable/ariane_thermometer"
            android:id="@+id/arianeTopV"
            android:layout_gravity="center_horizontal"
            android:layout_height="20dp">
        </View>

        <TextView
            android:id="@+id/stateTV"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/circle"
            android:text="6"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="30dp" />
        <View
            android:layout_width="5dp"
            android:background="@drawable/ariane_thermometer"
            android:id="@+id/arianeBottomV"
            android:layout_gravity="center_horizontal"
            android:layout_height="20dp">
        </View>
    </LinearLayout>

    <TextView
        android:id="@+id/stopTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/arianeLinLay"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/connectionsLinLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider"
        android:id="@+id/dividerV">

    </View>
</RelativeLayout>
