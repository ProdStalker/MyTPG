<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="valid until"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/validUntilTV"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <TextView
            android:text="name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTV"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textSize="24sp"
            android:paddingTop="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="price infos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:id="@+id/priceInfosTV" />

            <TextView
                android:text="price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceTV"
                android:layout_toRightOf="@+id/priceInfosTV"
                android:paddingTop="12dp"
                android:paddingLeft="16dp" />
        </RelativeLayout>

        <TextView
            android:text="description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTV"
            android:elevation="0dp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <!-- <TextView
                android:text="@string/prepare_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorPrimary"
                android:id="@+id/prepareActionTV"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" /> -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_action_ticket"
                android:id="@+id/prepareActionIV"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>