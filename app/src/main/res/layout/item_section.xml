<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:text="16:08 PM"
                android:layout_height="wrap_content"
                android:id="@+id/fromDateTV"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="16dp"
                android:textStyle="normal|bold"
                android:layout_centerVertical="true"
                android:layout_width="80dp" />

            <TextView
                android:text="1202 Genève, Rue Hoffmann 16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromTV"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/fromDateTV"
                android:layout_marginLeft="8dp"
                android:textStyle="normal|bold"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fromPlatformTV" />

            <TextView
                android:text="Platform 15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/fromPlatformTV"
                android:layout_marginRight="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider">
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/infosRelLay">

            <TextView
                android:text="2 min"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/durationTV"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true" />

            <TextView
                android:text="1202 Genève, Rue Hoffmann 16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/transportTV"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/durationTV"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/chevronIV"
                android:layout_marginRight="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chevron_right"
                android:id="@+id/chevronIV"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider">

        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:text="16:08"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/toDateTV"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="16dp"
                android:textStyle="normal|bold"
                android:layout_centerVertical="true" />

            <TextView
                android:text="Genève, Grand-Pré"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toTV"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/toDateTV"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:textStyle="normal|bold"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/toPlatformTV" />

            <TextView
                android:text="Platform 15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/toPlatformTV"
                android:layout_marginRight="16dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>